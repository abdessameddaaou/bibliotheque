<!DOCTYPE html>
<head>
	<meta charset="UTF-8">
	{% block title %}
		<title>MrBooks</title>
	{% endblock %}

	{% block stylesheets %}
		{#{{ encore_entry_link_tags('app') }}#}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<meta charset="utf-8"/>
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
		<!-- Favicon-->
		<link
		rel="icon" type="image/x-icon" href="/assets/book.ico"/>
		<!-- Bootstrap Icons-->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"/>
		<!-- Google fonts-->
		<link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet"/>
		<link
		href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css"/>
		<!-- SimpleLightbox plugin CSS-->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css" rel="stylesheet"/>
		<link href="/style.css" rel="stylesheet"/>
	{% endblock %}
	{% block surcharge %}
		<link href="/style2.css" rel="stylesheet"/>
	{% endblock %}
	{% block javascripts %}{% endblock %}
</head>

<body>
	{% block nav %}
		<!-- Navigation-->
		<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
			<div class="container px-4 px-lg-5">
				<a class="navbar-brand" href="{{ path("home") }}">
					<img src="/assets/book.ico" alt="Hello"/>
					MrBooks
				</a>
				<div class="collapse navbar-collapse" id="navbarResponsive">
					<ul class="navbar-nav ms-auto my-2 my-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="{{ path("lister_livres") }}">Livres</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path("lister_auteurs") }}">Auteurs</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path("lister_genres") }}">Genres</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	{% endblock %}

	{% block home %}{% endblock %}

	<section class="page-section" id="services">
		<div class="container ">
			{% block contenu %}
				{# Contenu de la page #}
			{% endblock %}
		</div>
	</section>

	{% block footer %}
		<footer class="bg-light py-5">
			<div class="container px-4 px-lg-5">
				<div class="small text-center text-muted">Copyright &copy; UPJV Amiens
				</div>
			</div>
		</footer>
		<!-- Bootstrap core JS-->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
		<!-- SimpleLightbox plugin JS-->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.js"></script>
		<!-- Core theme JS-->
		<script src="js/scripts.js"></script>
		<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
	{% endblock %}
</body></html></body>

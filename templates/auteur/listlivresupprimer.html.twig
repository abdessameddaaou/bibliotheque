{% extends "base.html.twig" %}
    {% block contenu %}

       	<div id="portfolio">
         <h3 class='text-center text-warning'>Liste des livres : {{auteur.nomprenom}}</h3>
         
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">isbn</th>
					<th scope="col">titre</th>
					<th scope="col">Nombre de pages</th>
					{# <th scope="col">Date de parution</th> #}
                    <th scope="col">Note</th>
				</tr>
			</thead>
			<tbody>
				{% for livre in auteur.ecrire %}
					<tr>
						<th scope="row">{{ livre.id }}</th>
						<td>{{ livre.isbn }}</td>
						<td>{{ livre.titre }}</td>
                        <td>{{ livre.nbpages }}</td>
						{# <td>{{ livre.datedeparution }}</td> #}
                        <td>{{ livre.note }}</td>
						
					</tr>
				{% endfor %}
			</tbody>
		</table>
        <a data-bs-toggle="modal" data-bs-target="#id" class="btn btn-danger">
            Supprimer l'auteur
        </a>
        <div class="modal fade" id="id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer : <span class='text-primary'> {{auteur.nomprenom}}</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class='text-danger'>Attention en cliquant sur supprimer, vous supprimez l'auteur et tous les livres de ce auteur</p>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <a href='{{path ('supprimer_auteur_livre',{'id':auteur.id})}}' type="button" class="btn btn-danger">Supprimer</a>
                </div>
                </div>
            </div>
        </div>    
	</div>
           
            
            
          

  
    {% endblock %}
    